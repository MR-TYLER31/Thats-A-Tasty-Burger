<h1>Eat-Da-Burgers</h1>
<ul>
    {{#each burger}}
    {{#unless this.devoured}}
    <li class="mt-3" style="list-style: none">
        {{this.burger_name}}
        <button data-id="{{this.id}}" type="button" class="btn btn-warning ml-4 eat">Devour</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Add a burger to devour</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger name:</label>
        <input type="text" id="burg" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>