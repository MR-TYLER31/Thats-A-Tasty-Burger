<div class="container-fluid">
    <div class="row d-flex justify-content-start">
        <div class="col-md-4">
            <h3 class=" mt-5">Menu</h3>
            <hr>
            <ul>
                {{#each burger}}
                {{#unless this.devoured}}
                <li class="mt-3" style="list-style: none">
                    <button data-id="{{this.id}}" type="button"
                        class="btn btn-warning eat text-white mr-3">Devour</button>
                    {{this.burger_name}}

                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>


        <div class="col-md-4">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6">
                    <h3 class=" mt-5">Eat-Da-Burgers</h3>
                    <img src="/assets/img/burger.jpg" alt="" width="200px">

                </div>
            </div>
        </div>



        <div class="col-md-4">
            <h3 class=" mt-5">Menu</h3>
            <hr>
            <ul>
                {{#each burger}}
                {{#if this.devoured}}
                <li class="mt-3" style="list-style: none">
                    <button data-id="{{this.id}}" type="button"
                        class="btn btn-danger remove text-white mr-3">Devour</button>
                    {{this.burger_name}}

                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>




    <div class="col-md-12">
        <h2 class="text-center">Add a burger to devour</h2>
        <div class="row d-flex justify-content-center">

            <form class="create-form">
                <div class="form-group">
                    <label for="burg">Burger name:</label>
                    <input type="text" id="burg" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>