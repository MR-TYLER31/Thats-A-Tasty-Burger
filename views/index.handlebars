<h1>Eat-Da-Burgers</h1>
<ul>
    {{#each burger}}
    {{#unless this.devoured}}
    <li class="mt-3" style="list-style: none">
        {{this.burger_name}}
        <button data-id="{{this.id}}" type="button" class="btn btn-warning ml-4 eat">Devour</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Add a burger to devour</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger name:</label>
        <input type="text" id="burg" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>
<h3 class="text-center">Devoured Burgers</h3>
<div class="col-md-6">
    <div class="row d-flex justify-content-center">
        <div class="col-md-12">

            <hr>
        </div>
        <div class="col-md-12">
            <ul class="mt-4 ml-5">
                {{#each burger}}
                {{#if this.devoured}}
                <li class="mt-2" style="list-style: none;">
                    <i class="fas fa-hamburger mx-3"></i>{{this.burger_name}}
                    <button data-id="{{this.id}}" type="button" class="btn btn-danger ml-4 remove">Delete</button>

                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>